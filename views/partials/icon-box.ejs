<%
const data = [
    {
        title: "Feature One",
        "icon": "fab fa-apple"
    },
    {
        title: "Feature Two",
        "icon": "far fa-user"
    },
    {
        title: "Feature Three",
        "icon": "fab fa-battle-net"
    }
];
%>
<% for ( let i = 0; i < data.length; i++ ) { %>
    <div class="col-lg-12 offset-lg-0 m-0">
        <div class="icon-box">
            <div class="icon-box__inner">
                <div class="icon-box__icon">
                    <i class="<%= data[i].icon; %>"></i>
                </div>
                <div class="icon-box__text">
                    <h4 class="icon-box__text__title"><%= data[i].title; %></h4>
                    <p class="icon-box__text__desc">Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do
                        eiusmod tempor incididuntut.</p>
                </div>
            </div>
        </div>
    </div>
<% } %>
